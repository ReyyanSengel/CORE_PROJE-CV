@model Feature
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}



<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">


            <form asp-action="Index" class="forms-sample" method="post">
                <input type="hidden" asp-for="FeatureID" />
                <div class="form-group">
                    <label asp-for="Header"> Başlık</label>
                    <input class="form-control" type="text" asp-for="Header" />
                </div>
                <div class="form-group">
                    <label asp-for="Name">Ad Soyad</label>
                    <input class="form-control" type="text" asp-for="Name" />
                </div>
                <div class="form-group">
                    <label asp-for="Title">Görev</label>
                    <input class="form-control" type="text" asp-for="Title" />
                </div>
              
                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                <button class="btn btn-dark">Cancel</button>
            </form>
        </div>
    </div>
</div>




