@model About
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            
            <form asp-action="Index" class="forms-sample" method="post">
                <input type="hidden" asp-for="AboutID" />
                <div class="form-group">
                    <label asp-for="Title"> Başlık</label>
                    <input class="form-control" type="text" asp-for="Title" />
                </div>
                <div class="form-group">
                    <label asp-for="Age">Yaş</label>
                    <input class="form-control" type="text" asp-for="Age" />
                </div>
                <div class="form-group">
                    <label asp-for="Mail">Mail</label>
                    <input class="form-control" type="text" asp-for="Mail" />
                </div>
                <div class="form-group">
                    <label asp-for="Phone">Telefon</label>
                    <input class="form-control" type="text" asp-for="Phone" />
                </div>
                <div class="form-group">
                    <label asp-for="Adress">Adres</label>
                    <input class="form-control" type="text" asp-for="Adress" />
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl">Görsel Yolu</label>
                    <input class="form-control" type="text" asp-for="ImageUrl" />
                </div>
                <div class="form-group">
                    <label asp-for="Description">Açıklama</label>
                    <textarea class="form-control" asp-for="Description" r></textarea>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button class="btn btn-dark">Cancel</button>
            </form>
        </div>
    </div>
</div>
