@model Experience
@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}




<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            
            <p class="card-description"> Yeni Deneyim Ekleme Paneli </p>
            <form asp-action="AddExperience" class="forms-sample">
                <div class="form-group">
                    <label asp-for="Name">Eklenecek Deneyim</label>
                    <input type="text" class="form-control" asp-for="Name">
                </div>
                <div class="form-group">
                    <label  asp-for="Date">Tarih</label>
                    <input type="text" class="form-control"  asp-for="Date">
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl">Görsel URL</label>
                    <input type="text" class="form-control"  asp-for="ImageUrl">
                </div>
                <div class="form-group">
                    <label  asp-for="Description">Açıklama</label>
                    <textarea class="form-control" asp-for="Description" r></textarea>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button class="btn btn-dark">Cancel</button>
            </form>
        </div>
    </div>
</div>

