@model List<WriterMessage>
@{
    ViewData["Title"] = "ReceiverMessageList";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar-Admin Gelen Kutusu </h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Gönderen</th>
                            <th>Konu</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Messajı Gör</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.WriterMessageID</td>
                                <td>@item.SenderName</td>
                                <td>@item.Subject</td>
                                <td>@item.Date</td>
                                <td><a class="btn btn-outline-danger" asp-route-id="@item.WriterMessageID" asp-action="Delete">Sil</a></td>
                                <td><a class="btn btn-outline-success" asp-route-id="@item.WriterMessageID" asp-action="AdminMessageDetails">Mesajı Gör</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a asp-for="AdminMessageSend" class="btn btn-outline-primary">Yeni Mesaj Oluştur</a>
            </div>
        </div>
    </div>
</div>

