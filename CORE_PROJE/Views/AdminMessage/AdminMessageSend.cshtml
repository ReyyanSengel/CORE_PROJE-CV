@model WriterMessage
@{
    ViewData["Title"] = "AdminMessageSend";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}



<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <p class="card-description"> Yeni Mesaj Gönderme Paneli </p>
            <form asp-action="AdminMessageSend" class="forms-sample">
                <div class="form-group">
                    <label asp-for="Subject">Başlık</label>
                    <input type="text" class="form-control" asp-for="Subject">
                </div>
                <div class="form-group">
                    <label asp-for="Receiver">Alıcı</label>
                    <input type="text" class="form-control" asp-for="Receiver">
                </div>
                <div class="form-group">
                    <label asp-for="ReceiverName">Alıcı Adı</label>
                    <input type="text" class="form-control" asp-for="ReceiverName">
                </div>
                <div class="form-group">
                    <label asp-for="Receiver">Alıcı Mail</label>
                    <input type="text" class="form-control" asp-for="Receiver">
                </div>

                <div class="form-group">
                    <label asp-for="MessageContent">Mesaj</label>
                    <input type="text" class="form-control" asp-for="MessageContent">
                </div>


                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button class="btn btn-dark">Cancel</button>
            </form>
        </div>
    </div>
</div>