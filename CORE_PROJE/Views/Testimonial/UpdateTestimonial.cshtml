@model Testimonial
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <p class="card-description"> Referans Detay Paneli </p>
            <form asp-action="UpdateTestimonial" class="forms-sample">
                <input type="hidden" asp-for="TestimonialID" />
                <div class="form-group">
                    <label asp-for="ClientName">Ad Soyad</label>
                    <input type="text" class="form-control" asp-for="ClientName">
                </div>
                <div class="form-group">
                    <label asp-for="Company">Şirket</label>
                    <input type="text" class="form-control" asp-for="Company">
                </div>
                <div class="form-group">
                    <label asp-for="Title">Unvan</label>
                    <input type="text" class="form-control" asp-for="Title">
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl">Resim Yolu</label>
                    <input type="text" class="form-control" asp-for="ImageUrl">
                </div>
                <div class="form-group">
                    <label asp-for="Comment">Yorum</label>
                    <textarea type="text" class="form-control" asp-for="Comment"></textarea>
                </div>


                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button class="btn btn-dark">Cancel</button>
            </form>
        </div>
    </div>
</div>





