@model List<Testimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Referans Listesi</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th># </th>
                                <th> Ad Soyad </th>
                                <th> Şirket </th>
                                <th> Unvan </th>
                                <th> Sil </th>
                                <th> Detaylar </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        <img src="@item.ImageUrl" />

                                    </td>
                                    <td> @item.ClientName </td>
                                    <td> @item.Company </td>
                                    <td> @item.Title </td>
                                    <td> <a asp-action="Delete" asp-route-id="@item.TestimonialID" class="btn btn-outline-danger"> Sil </a> </td>
                                    <td> <a asp-action="UpdateTestimonial" asp-route-id="@item.TestimonialID" class="btn btn-outline-warning"> Detaylar </a> </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                    <a class="btn btn-outline-primary" asp-action="AddTestimonial">Yeni Referans Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>







