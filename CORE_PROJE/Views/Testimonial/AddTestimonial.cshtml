
@model Testimonial
@{
    ViewData["Title"] = "AddTestimonial";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}



<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <p class="card-description"> Yeni Referans Ekleme Paneli </p>
            <form asp-action="AddTestimonial" class="forms-sample">
                <div class="form-group">
                    <label asp-for="ClientName">Adı</label>
                    <input type="text" class="form-control" asp-for="ClientName">
                </div>
                <div class="form-group">
                    <label asp-for="Company">Şirket</label>
                    <input type="text" class="form-control" asp-for="Company">
                </div>
                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <input type="text" class="form-control" asp-for="Title">
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl">Görsel URL</label>
                    <input type="text" class="form-control" asp-for="ImageUrl">
                </div>
                <div class="form-group">
                    <label asp-for="Comment">Açıklama</label>
                    <textarea class="form-control" asp-for="Comment" r></textarea>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button class="btn btn-dark">Cancel</button>
            </form>
        </div>
    </div>
</div>



