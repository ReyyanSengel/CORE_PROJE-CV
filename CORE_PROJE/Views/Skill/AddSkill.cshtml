@model Skill


@{
    ViewData["Title"] = "AddSkill";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <p class="card-description"> Yeni Yetenek Ekleme Paneli </p>
            <form asp-action="AddSkill" class="forms-sample">
                <div class="form-group">
                    <label asp-for="Title">Eklenecek Yetenek</label>
                    <input type="text" class="form-control" asp-for="Title">
                </div>
                <div class="form-group">
                    <label asp-for="Value">Değer</label>
                    <input type="text" class="form-control" asp-for="Value">
                </div>
                
                
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button class="btn btn-dark">Cancel</button>
            </form>
        </div>
    </div>
</div>
