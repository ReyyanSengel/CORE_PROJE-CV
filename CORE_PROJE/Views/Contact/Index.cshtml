@model List<Message>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Messajlar Kutusu </h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Gönderen</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Messajı Gör</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MessageID</td>
                                <td>@item.Name</td>
                                <td>@item.Date</td>
                                <td><a class="btn btn-outline-danger" asp-route-id="@item.MessageID" asp-action="DeleteMessage">Sil</a></td>
                                <td><a class="btn btn-outline-success" asp-route-id="@item.MessageID" asp-action="ViewMessage">Mesajı Gör</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
               
            </div>
        </div>
    </div>
</div>





