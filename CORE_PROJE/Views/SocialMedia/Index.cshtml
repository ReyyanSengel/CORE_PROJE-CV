@model List<SocialMedia>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Sosyal Medya Hesapları </h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.SocialMediaID</td>
                                <td>@item.Name</td>
                                <td><a class="btn btn-outline-danger" asp-route-id="@item.SocialMediaID" asp-action="Delete">Sil</a></td>
                                <td><a class="btn btn-outline-success" asp-route-id="@item.SocialMediaID" asp-action="UpdateSocialMedia">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a class="btn btn-outline-primary" asp-action="AddSocialMedia">Yeni Hesap Ekle</a>
            </div>
        </div>
    </div>
</div>
